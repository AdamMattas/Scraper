<div id="wrapper">

  <div class="slide-wrapper">

  {{#each doc}}
    
    <div class="slides">
      <a href="/articles/{{this._id}}">
        <img src="{{this.image}}">
      </a>
      <input class="titleinput" type="text" placeholder="Title">
      <input class="bodyinput" type="text" placeholder="Body">
      <a class="savenote" data-id="{{this._id}}">Post Comment</a>
    </div>

    <div class="info">
      <h2>{{this.title}}</h2>
      <h3>{{this.auxiliary}}</h3>
      <p>{{this.description}}</p>
      <div class="notes">{{this.note}}</div>
      <a class="articles" href="/delete/{{this._id}}" data-id="{{this._id}}">Delete Article</a>
    </div>
    
  {{/each}}

  </div>

  <a class="move-btns move-btn-left" data-move="-1">❮</a>
  <a class="move-btns move-btn-right" data-move="1">❯</a>

</div>